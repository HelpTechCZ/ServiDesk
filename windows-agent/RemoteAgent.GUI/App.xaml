<Application x:Class="RemoteAgent.GUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <!-- ═══════════════════════════════════════════════ -->
        <!-- Design systém – dark theme, nasajtak.cz style   -->
        <!-- ═══════════════════════════════════════════════ -->

        <!-- Barvy -->
        <Color x:Key="PrimaryBlue">#FF13A2DD</Color>
        <Color x:Key="PurpleAccent">#FF3E276B</Color>
        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryBlue}"/>
        <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#FF0D8ABD"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource PurpleAccent}"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#FFEF4444"/>
        <SolidColorBrush x:Key="DangerDarkBrush" Color="#FFDC2626"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#FF22C55E"/>
        <SolidColorBrush x:Key="CardBrush" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="TextBrush" Color="#FF1E293B"/>
        <SolidColorBrush x:Key="SubtextBrush" Color="#FF64748B"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#FFE2E8F0"/>

        <!-- Dark background gradient (slate-900 → slate-800) -->
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF0F172A" Offset="0"/>
            <GradientStop Color="#FF1E293B" Offset="1"/>
        </LinearGradientBrush>

        <!-- Accent gradient (blue → purple) -->
        <LinearGradientBrush x:Key="GradientBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF13A2DD" Offset="0"/>
            <GradientStop Color="#FF3E276B" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="GradientHoverBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF0D8ABD" Offset="0"/>
            <GradientStop Color="#FF2E1A55" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="GradientLineBrush" StartPoint="0,0.5" EndPoint="1,0.5">
            <GradientStop Color="#FF13A2DD" Offset="0"/>
            <GradientStop Color="#FF3E276B" Offset="1"/>
        </LinearGradientBrush>

        <!-- Shadow -->
        <DropShadowEffect x:Key="CardShadow" BlurRadius="24" ShadowDepth="4"
                          Direction="270" Opacity="0.12" Color="Black"/>

        <!-- ═══════════════════════════════════════════════ -->
        <!-- PrimaryButton – gradient                        -->
        <!-- ═══════════════════════════════════════════════ -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="24,14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{StaticResource GradientBrush}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{StaticResource GradientHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ═══════════════════════════════════════════════ -->
        <!-- SecondaryButton – outline                       -->
        <!-- ═══════════════════════════════════════════════ -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="Transparent"
                                BorderBrush="{StaticResource PrimaryBrush}"
                                BorderThickness="1.5"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#0813A2DD"/>
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="{StaticResource PrimaryDarkBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ═══════════════════════════════════════════════ -->
        <!-- DangerButton                                    -->
        <!-- ═══════════════════════════════════════════════ -->
        <Style x:Key="DangerButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{StaticResource DangerBrush}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{StaticResource DangerDarkBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ═══════════════════════════════════════════════ -->
        <!-- ModernTextBox – rounded, focus glow             -->
        <!-- ═══════════════════════════════════════════════ -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="CaretBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="TextBoxBorder"
                                Background="White"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1.5"
                                CornerRadius="8"
                                Padding="12,10">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="False"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="TextBoxBorder" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="TextBoxBorder" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                <Setter TargetName="TextBoxBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="{StaticResource PrimaryBlue}" BlurRadius="8"
                                                          ShadowDepth="0" Opacity="0.25"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ═══════════════════════════════════════════════ -->
        <!-- ModernPasswordBox – rounded, focus glow         -->
        <!-- ═══════════════════════════════════════════════ -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="CaretBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="PasswordBorder"
                                Background="White"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1.5"
                                CornerRadius="8"
                                Padding="12,10">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="False"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="PasswordBorder" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="PasswordBorder" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                <Setter TargetName="PasswordBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="{StaticResource PrimaryBlue}" BlurRadius="8"
                                                          ShadowDepth="0" Opacity="0.25"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ═══════════════════════════════════════════════ -->
        <!-- ModernTabControl – dark theme tabs              -->
        <!-- ═══════════════════════════════════════════════ -->
        <Style x:Key="ModernTabControl" TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <!-- Tab headers -->
                            <Border Grid.Row="0" Padding="0,0,0,12">
                                <UniformGrid Rows="1" IsItemsHost="True"/>
                            </Border>
                            <!-- Tab content -->
                            <ContentPresenter Grid.Row="1"
                                              ContentSource="SelectedContent"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ═══════════════════════════════════════════════ -->
        <!-- ModernTabItem – pill style on dark bg           -->
        <!-- ═══════════════════════════════════════════════ -->
        <Style x:Key="ModernTabItem" TargetType="TabItem">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="TabBorder"
                                Background="#18FFFFFF"
                                CornerRadius="8"
                                Padding="16,10"
                                Margin="0,0,6,0">
                            <ContentPresenter x:Name="TabText"
                                              ContentSource="Header"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              TextBlock.Foreground="#99FFFFFF"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="TabBorder" Property="Background" Value="#28FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="TabBorder" Property="Background" Value="{StaticResource GradientBrush}"/>
                                <Setter TargetName="TabText" Property="TextBlock.Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ═══════════════════════════════════════════════ -->
        <!-- ModernListBox – chat messages                   -->
        <!-- ═══════════════════════════════════════════════ -->
        <Style x:Key="ModernListBox" TargetType="ListBox">
            <Setter Property="Background" Value="#FFF8FAFC"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer Focusable="False"
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled">
                                <ItemsPresenter/>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Application.Resources>
</Application>
