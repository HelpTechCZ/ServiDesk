# Server
PORT=8090
HOST=0.0.0.0

# Authentication – generate your own token: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ADMIN_TOKEN=change_me_generate_random_token

# Proxy – set to true if behind a reverse proxy (nginx, cloudflare) to trust X-Forwarded-For
TRUST_PROXY=false

# Session
SESSION_TIMEOUT_MS=3600000
HEARTBEAT_INTERVAL_MS=10000
HEARTBEAT_TIMEOUT_MS=30000

# Limits
MAX_PENDING_REQUESTS=50
MAX_ACTIVE_SESSIONS=10
MAX_MESSAGE_SIZE_BYTES=2097152
MAX_CONNECTIONS_PER_IP=20
MAX_DEVICES=500
MAX_MESSAGES_PER_SECOND=100
MAX_RELAY_FRAME_BYTES=2097152

# WebSocket Origin – comma-separated list of allowed origins (empty = all allowed)
# Example: ALLOWED_ORIGINS=https://admin.example.com,https://panel.example.com
ALLOWED_ORIGINS=

# Logging
LOG_LEVEL=info
